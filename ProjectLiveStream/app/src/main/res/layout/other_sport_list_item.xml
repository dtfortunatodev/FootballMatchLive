<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/list_competitions_min_height"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_pop_up"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/ivOtherSportItemIcon"
            android:layout_width="@dimen/list_match_item_logo_size"
            android:layout_height="@dimen/list_match_item_logo_size"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_basketball" />

        <FrameLayout
            android:layout_width="@dimen/base_list_compact_bar_separator_height"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/base_list_compact_bar_separator" >
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvOtherSportItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Flash Stream 1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/match_details_stream_item_title"
                android:textSize="@dimen/match_details_stream_item_title_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnOtherSportOpen"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/popup_button_height"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_confirm_selector"
                android:paddingLeft="@dimen/popup_button_padding"
                android:paddingRight="@dimen/popup_button_padding"
                android:text="Install"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
