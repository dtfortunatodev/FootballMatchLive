<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_selector"
    android:minHeight="@dimen/list_competitions_min_height"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layoutListMatchTeam1Container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/layoutListMatchResultContainer"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivListMatchTeam1Icon"
            android:layout_width="@dimen/list_match_item_logo_size"
            android:layout_height="@dimen/list_match_item_logo_size"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tvListMatchTeam1TeamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/list_match_team_name"
            android:textSize="@dimen/list_match_item_name_team_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutListMatchResultContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:minWidth="@dimen/list_match_item_result_min_width"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvListMatchResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/list_match_result_default"
            android:textSize="@dimen/list_match_item_result_text_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivListMatchResultYoutubeIcon"
            android:layout_width="@dimen/list_match_item_youtube_icon_width"
            android:layout_height="@dimen/list_match_item_youtube_icon_width"
            android:paddingLeft="2dp"
            android:src="@drawable/youtube_icon_app"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvListMatchTeam2TeamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/ivListMatchTeam2Icon"
        android:layout_toRightOf="@+id/layoutListMatchResultContainer"
        android:ellipsize="end"
        android:gravity="right"
        android:maxLines="2"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/list_match_team_name"
        android:textSize="@dimen/list_match_item_name_team_size" />

    <ImageView
        android:id="@+id/ivListMatchTeam2Icon"
        android:layout_width="@dimen/list_match_item_logo_size"
        android:layout_height="@dimen/list_match_item_logo_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <FrameLayout
        android:id="@+id/frameListMatchTopSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_list_compact_bar_separator_height"
        android:background="@color/base_list_compact_bar_separator" >

    </FrameLayout>

</RelativeLayout>
