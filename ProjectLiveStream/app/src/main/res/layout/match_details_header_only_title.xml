<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_pop_up"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/layoutMatchDetailsDateContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/base_list_compact_margin_sides"
            android:layout_marginRight="@dimen/base_list_compact_margin_sides"
            android:orientation="vertical"
            android:paddingBottom="@dimen/base_list_compact_top_bottom_margin"
            android:paddingTop="@dimen/base_list_compact_top_bottom_margin" >

            <TextView
                android:id="@+id/tvMatchDetailsDateHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/base_list_compact_title"
                android:textSize="@dimen/base_list_compact_title_text_size" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_list_compact_bar_separator_height"
                android:layout_marginTop="2dp"
                android:background="@color/base_list_compact_bar_separator"
                android:visibility="visible" >
            </FrameLayout>

            <LinearLayout
                android:id="@+id/layoutBaseListCompactContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutMatchDetailsDateContainer"
            android:background="@drawable/bg_item_selector"
            android:minHeight="@dimen/list_competitions_min_height" >

            <ImageView
                android:id="@+id/ivListMatchItemIsLive"
                android:layout_width="@dimen/list_match_item_logo_size"
                android:layout_height="@dimen/list_match_item_logo_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/live_icon"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/liatMatchItemInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="35dp"
                android:layout_toRightOf="@+id/ivListMatchItemIsLive"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvListMatchItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/list_match_team_name"
                    android:textSize="@dimen/list_match_item_name_team_size" />

                <TextView
                    android:id="@+id/tvListMatchItemDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/list_match_result_default"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>