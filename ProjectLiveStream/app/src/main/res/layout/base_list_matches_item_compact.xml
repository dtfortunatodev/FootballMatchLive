<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_pop_up" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/base_list_compact_margin_sides"
            android:layout_marginRight="@dimen/base_list_compact_margin_sides"
            android:orientation="vertical"
            android:paddingBottom="@dimen/base_list_compact_top_bottom_margin"
            android:paddingTop="@dimen/base_list_compact_top_bottom_margin" >

            <RelativeLayout
                android:id="@+id/RelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/ivBaseListCompactTitleIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/tvBaseListCompactTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/ivBaseListCompactTitleIcon"
                    android:layout_alignParentTop="false"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toLeftOf="@+id/ivBaseListCompactFavoriteIcon"
                    android:layout_toRightOf="@+id/ivBaseListCompactTitleIcon"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/base_list_compact_title"
                    android:textSize="@dimen/base_list_compact_title_text_size" />

                <ImageView
                    android:id="@+id/ivBaseListCompactFavoriteIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/favorite_blue_star_uncheck" />

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_list_compact_bar_separator_height"
                android:layout_marginTop="2dp"
                android:background="@color/base_list_compact_bar_separator"
                android:visibility="visible" >
            </FrameLayout>

            <LinearLayout
                android:id="@+id/layoutBaseListCompactContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
