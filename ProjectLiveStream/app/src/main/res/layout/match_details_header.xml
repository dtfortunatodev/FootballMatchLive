<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_pop_up"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/layoutMatchDetailsDateContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/base_list_compact_margin_sides"
            android:layout_marginRight="@dimen/base_list_compact_margin_sides"
            android:orientation="vertical"
            android:paddingBottom="@dimen/base_list_compact_top_bottom_margin"
            android:paddingTop="@dimen/base_list_compact_top_bottom_margin" >

            <TextView
                android:id="@+id/tvMatchDetailsDateHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/base_list_compact_title"
                android:textSize="@dimen/base_list_compact_title_text_size" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_list_compact_bar_separator_height"
                android:layout_marginTop="2dp"
                android:background="@color/base_list_compact_bar_separator"
                android:visibility="visible" >
            </FrameLayout>

            <LinearLayout
                android:id="@+id/layoutBaseListCompactContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutMatchDetailsTeam1Container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/layoutMatchDetailsDateContainer"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tvMatchDetailsheaderResult"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvMatchDetailsTeam1Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Real Madrid"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/list_match_team_name"
                android:textSize="@dimen/list_match_item_name_team_size" />

            <ImageView
                android:id="@+id/ivMatchDetailsTeam1Logo"
                android:layout_width="@dimen/match_details_team_logo_size"
                android:layout_height="@dimen/match_details_team_logo_size"
                android:src="@drawable/ic_launcher" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvMatchDetailsheaderResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutMatchDetailsDateContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:minWidth="50dp"
            android:text="16:00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/list_match_result_default"
            android:textSize="@dimen/list_match_item_result_text_size" />

        <LinearLayout
            android:id="@+id/layoutMatchDetailsTeam2Container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/layoutMatchDetailsDateContainer"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/tvMatchDetailsheaderResult"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvMatchDetailsTeam2Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Real Madrid"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/list_match_team_name"
                android:textSize="@dimen/list_match_item_name_team_size" />

            <ImageView
                android:id="@+id/ivMatchDetailsTeam2Logo"
                android:layout_width="@dimen/match_details_team_logo_size"
                android:layout_height="@dimen/match_details_team_logo_size"
                android:src="@drawable/ic_launcher" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
