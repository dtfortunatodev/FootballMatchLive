<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/quote_container"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#c8e6c9"
            android:minHeight="40dp"
            android:layout_alignParentTop="true"
            android:layout_margin="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Question of the day:\n\nEach one of this teams won Champions League in the season 2013/2014?"
                android:id="@+id/tvQuestion"
                android:layout_gravity="center_vertical"
                android:textColor="#666666"
                android:layout_margin="3dp" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/answer1"
                android:minHeight="35dp"
                android:background="@drawable/bg_item_selector"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Real Madrid"
                    android:id="@+id/tvAnswer1"
                    android:layout_gravity="center_vertical"
                    android:textColor="#666666"
                    android:layout_margin="3dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/answer2"
                android:minHeight="35dp"
                android:background="@drawable/bg_item_selector"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="AtlÃ©tico Madrid"
                    android:id="@+id/tvAnswer2"
                    android:layout_gravity="center_vertical"
                    android:textColor="#666666"
                    android:layout_margin="3dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/answer3"
                android:minHeight="35dp"
                android:background="@drawable/bg_item_selector"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Bayern Munich"
                    android:id="@+id/tvAnswer3"
                    android:layout_gravity="center_vertical"
                    android:textColor="#666666"
                    android:layout_margin="3dp" />
            </FrameLayout>

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>