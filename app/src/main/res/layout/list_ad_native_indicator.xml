<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/frameListAdContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ads_native_height"
        android:layout_marginLeft="@dimen/list_item_sides_margin"
        android:layout_marginRight="@dimen/list_item_sides_margin">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layoutListItemSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_item_separator"
        android:layout_gravity="bottom"/>

</FrameLayout>