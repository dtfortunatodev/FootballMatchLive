<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_match_height"
        android:background="@drawable/list_item_bg_selector">

        <ImageView
            android:id="@+id/ivListAdInternalBackgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvListAdInternalDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_margin="6dp"/>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/layoutListItemSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_item_separator"
        android:layout_gravity="bottom"/>

</FrameLayout>